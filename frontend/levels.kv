<levelsWindow>:
    on_enter:
        self.build()

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 2
        rows: 3
        padding: 15
        row_force_default: True
        row_default_height: 225
        size_hint_y: None
        height: self.minimum_height

        Label:
            text: ''
        Label:
            text: ''

        GridLayout:
            cols: 1
            Label:
                text : "SELECT LEVEL:"
                color: '111111'
                bold : True
                size_hint : 0.2, 0.1

            Button:
                text : "EASY"
                on_release:
                    root.manager.transition.direction = "up"
                    root.change_level(1)

            Button:
                text : "MEDIUM"
                on_release:
                    root.manager.transition.direction = "up"
                    root.change_level(2)

            Button:
                text : "HARD"
                on_release:
                    root.manager.transition.direction = "up"
                    root.change_level(3)

            Button:
                id : multiplayer
                text : "MULTIPLAYER"
                on_release:
                    root.multiplayer_color()
                    root.manager.transition.direction = "up"
                    root.multiplayer_game()


        GridLayout:
            cols: 1
            size_hint: 1, 0.5
            Label:
                text : "RANKING:"
                color: '111111'
                bold : True
                size_hint : 0.2, 0.05
            GridLayout:
                valign: 'top'
                cols: 1
                id: ranking
                size_hint: 1, 0.2

        Label:
            text: ''
        Label:
            text: ''

<menuWindow>:
    on_enter:
        self.build()

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Button:
        text: "GO BACK"
        size_hint: 0.1, 0.05
        pos_hint: {"top" : 1}
        on_release:
            root.returning()

    Label:
        text : "SELECT SUDOKU:"
        color: '111111'
        bold: True
        size_hint: 0.2, 0.1
        pos_hint: {"top" : 0.97}


<Button>:
    size_hint : 0.4, 0.1


