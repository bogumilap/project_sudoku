<levelsWindow>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text : "SELECT LEVEL:"
        color: '111111'
        bold : True
        size_hint : 0.2, 0.1
        pos_hint : {"x" : 0.3, "top" : 0.85}

    Button:
        text : "EASY"
        size_hint : 0.4, 0.1
        pos_hint : {"x" : 0.3, "top" : 0.75}
        on_release:
            root.manager.transition.direction = "up"
            root.changeLevel(1)

    Button:
        text : "MEDIUM"
        size_hint : 0.4, 0.1
        pos_hint : {"x" : 0.3, "top" : 0.60}
        on_release:
            root.manager.transition.direction = "up"
            root.changeLevel(2)

    Button:
        text : "HARD"
        size_hint : 0.4, 0.1
        pos_hint : {"x" : 0.3, "top" : 0.45}
        on_release:
            root.manager.transition.direction = "up"
            root.changeLevel(3)



<menuWindow>:
    on_enter:
        self.build()

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text : "SELECT SUDOKU:"
        color: '111111'
        bold: True
        size_hint: 0.2, 0.1
        pos_hint: {"top" : 1}


<GridLayout>:
    cols: 7
    row_force_default: True
    row_default_height: 100
    col_force_default: True
    col_default_width: 100
    spacing: 3, 3
    pos_hint: {"top" : 0.9}


<Button>:
    size_hint : 0.4, 0.1