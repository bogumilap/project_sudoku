<BoardSmall>:
    cols: 3
    row_force_default: True
    row_default_height: 50
    col_force_default: True
    col_default_width: 50
    spacing: 1, 1


<NumberLabel>:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            size: self.size
            pos: self.pos
    bold: True


<NumberInput>:
    halign: "center"
    multiline: False
    padding: 0, 15


<NumberInput@TextInput>:
    background_color: (1,1,1,0.8) if self.focus else (1,1,1,1)


<BoardSudoku>:
    cols: 3
    spacing: 1, 1
    row_force_default: True
    row_default_height: 155
    col_force_default: True
    col_default_width: 155
    padding: 50, 20


<GameWindow>:
    on_enter : self.build()

    GridLayout:
        cols:3
        size: root.width, root.height

        GridLayout:
            cols:1
            size_hint: 0.7, 1.0

            ProgressBar:
                id: my_progress_bar
                value: .0
                min: 0
                max: 1
                size_hint: 0.7, 0.1

            FloatLayout:
                size_hint: 0.7, 0.85
                BoxLayout:
                    id: sudoku
                    orientation: "vertical"

        GridLayout:
            cols: 1
            size_hint: 0.3, 1.0
            markup: True
            background_color: (0.3,0.3,0.3,1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos


            Label:
                id: counter
                hour: 0
                minute: 0
                second: 0
                font_size: '25sp'
                font_name: 'Orbitron-VariableFont_wght.ttf'
                color: (0,0,0,1)
                markup: True
                background_color: (1,1,1,1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: 200, 200, 200, 200


            Label:
                text: "Hint: left 3/3"

            BoxLayout:
                id: table_id

            GridLayout:
                cols: 2

                Button:
                    text: "Get"
                    id: GET


                    background_color: (39/255,209/255,245/255,1)
                    background_normal: ''
                    background_down: ''


                    on_press:
                        GET.background_color = (165/255,1,1,1)
                        root.get_popup("get")
                    on_release:
                        GET.background_color = (39/255,209/255,245/255,1)


                Button:
                    text: "Count"
                    id: COUNT

                    background_color: (14/255,92/255,1,1)
                    background_normal: ''
                    background_down: ''

                    on_press:
                        COUNT.background_color = (14/255,0,1,1)
                        root.get_popup("count")

                    on_release:
                        COUNT.background_color = (14/255,92/255,1,1)

            GridLayout:
                cols : 2

                Button:
                    text: "Correct - get"

                Button:
                    text: "Correct - elimination"

            GridLayout:
                cols:3
                Button:
                    text: "Reset"
                    id: RESET

                    background_color: (219/255,221/255,56/255,1)
                    background_normal: ''
                    background_down: ''

                    on_press:
                        RESET.background_color = (180/255,181/255,44/255,1)
                        root.reset_game()

                    on_release:
                        RESET.background_color = (219/255,221/255,56/255,1)


                Button:
                    text: "Pause"
                    id: PAUSE

                    background_color: (18/255,186/255,149/255,1)
                    background_normal: ''
                    background_down: ''

                    on_press:
                        PAUSE.background_color = (11/255,137/255,109/255,1)
                        root.get_popup("pause")

                    on_release:
                        PAUSE.background_color = (18/255,186/255,149/255,1)

                Button:
                    text: "Exit"
                    id: EXIT

                    background_color: (221/255,26/255,26/255,1)
                    background_normal: ''
                    background_down: ''

                    on_press:
                        EXIT.background_color = (185/255,20/255,20/255,1)
                        root.exit_game()

                    on_release:
                        EXIT.background_color = (221/255,26/255,26/255,1)

# pop up window
<PopUpHints>:
    row: row
    column: column

	Label:
		text : "Enter row:"
		size_hint : 0.2, 0.1
		pos_hint : {"x" : 0.4, "top" : 0.9}
		opacity: 0.5

	TextInput:
        id : row
        multiline : False
        padding: 0, 0
        size_hint : 0.2, 0.15
        pos_hint : {"x" : 0.4, "top" : 0.8}
        opacity: 0.7

    Label:
		text : "Enter column:"
		size_hint : 0.2, 0.1
		pos_hint : {"x" : 0.4, "top" : 0.6}
		opacity: 0.5

	TextInput:
        id : column
        multiline : False
        size_hint : 0.2, 0.15
        pos_hint : {"x" : 0.4, "top" : 0.5}
        opacity: 0.7


<DataTable>:
    id: table_count
    RecycleView:
        viewclass: 'CustomLabel'
        id: table_floor
        RecycleGridLayout:
            id: table_floor_layout
            cols: 5
            default_size: (None,250)
            default_size_hint: (1,None)
            size_hint_y: None
            height: self.minimum_height
            spacing: 5
<CustomLabel@Label>:
    bcolor: (1,1,1,1)
    canvas.before:
        Color:
            rgba: root.bcolor
        Rectangle:
            size: self.size
            pos: self.pos

<PopUpPause>:
    size: root.width, root.height
    Label:
        text: "Pause clicked. Time for break!"
        size_hint: 1, 0.1
		pos_hint : {"x" : 0, "top" : 0.9}

    Button:
        id: resume
        size_hint: 1, 0.2
		pos_hint : {"x" : 0, "top" : 0.7}
        text: "Resume"

    Button:
        id: reset
        size_hint: 1, 0.2
		pos_hint : {"x" : 0, "top" : 0.5}
        text: "Restart"

    Button:
        id: exit
        size_hint: 1, 0.2
		pos_hint : {"x" : 0, "top" : 0.3}
        text: "Exit"


