                    id: sudoku
                    orientation: "vertical"




        GridLayout:
            cols: 1
            size_hint: 0.2, 1.0

            Label:
                id: counter
                text: "10"

            Label:
                text: "Hint"

            GridLayout:
                cols: 2

                Button:
                    text: "Get"

                Button:
                    text: "Count"

            Button:
                text: "Correct"

            GridLayout:
                cols:3
