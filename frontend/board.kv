<BoardSmall>:
    cols: 3
    row_force_default: True
    row_default_height: 50
    col_force_default: True
    col_default_width: 50
    spacing: 1, 1


<NumberLabel>:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            size: self.size
            pos: self.pos
    bold: True


<NumberInput>:
    halign: "center"
    multiline: False
    padding: 0, 15


<NumberInput@TextInput>:
    background_color: (1,1,1,0.8) if self.focus else (1,1,1,1)


<BoardSudoku>:
    cols: 3
    spacing: 1, 1
    row_force_default: True
    row_default_height: 155
    col_force_default: True
    col_default_width: 155
    padding: 50, 20


<GameWindow>:
    on_enter : self.build()

    GridLayout:
        cols:3
        size: root.width, root.height

        GridLayout:
            cols:1
            size_hint: 0.8, 1.0

            ProgressBar:
                id: my_progress_bar
                value: .0
                min: 0
                max: 1
                size_hint: 0.8, 0.1

            FloatLayout:
                size_hint: 0.8, 0.85
                BoxLayout:
                    id: sudoku
                    orientation: "vertical"

        GridLayout:
            cols: 1
            size_hint: 0.2, 1.0
            markup: True
            background_color: (0.3,0.3,0.3,1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos


            Label:
                id: counter
                hour: 0
                minute: 0
                second: 0
                font_size: '25sp'
                font_name: 'Orbitron-VariableFont_wght.ttf'
                color: (0,0,0,1)
                markup: True
                background_color: (1,1,1,1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: 100, 100, 100, 100


            Label:
                text: "Hint: left 3/3"

            GridLayout:
                cols: 2

                Button:
                    text: "Get"
                    id: GET
                    size_hint: 1.0, 0.5

                    background_color: (39/255,209/255,245/255,1)
                    background_normal: ''
                    background_down: ''


                    on_press: GET.background_color = (1,1,0,1)
                    on_release: GET.background_color = (39/255,209/255,245/255,1)






                Button:
                    text: "Count"

            Button:
                text: "Correct"

            GridLayout:
                cols:3
                Button:
                    text: "Restart"
                Button:
                    text: "Pause"

                Button:
                    id: BB
                    text: "Exit"
                    background_color: (0,0,0,0)
                    background_normal: ''
                    background_down: ''

                    on_press: BB.background_color = (1,1,0,1)
                    on_release: BB.background_color = (0,1,0,1)


