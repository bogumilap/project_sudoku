<BoardSmall>:
    cols: 3
    row_force_default: True
    row_default_height: 50
    col_force_default: True
    col_default_width: 50
    spacing: 1, 1


<NumberLabel>:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            size: self.size
            pos: self.pos
    bold: True


<NumberInput>:
    halign: "center"
    multiline: False
    padding: 0, 15


<NumberInput@TextInput>:
    background_color: (1,1,1,0.8) if self.focus else (1,1,1,1)


<BoardSudoku>:
    cols: 3
    spacing: 1, 1
    row_force_default: True
    row_default_height: 155
    col_force_default: True
    col_default_width: 155
    padding: 50, 20


<RoundedButton@Button>:
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (39/255,209/255,245/255,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]





<GameWindow>:
    on_enter : self.build()

    GridLayout:
        cols:3
        size: root.width, root.height

        GridLayout:
            cols:1
            size_hint: 0.8, 1.0

            ProgressBar:
                id: my_progress_bar
                value: .25
                min: 0
                max: 1
                size_hint: 0.8, 0.1

            Button:
                size_hint: 0.8, 0.05
                text: "Press me!"
                on_press: root.press_it()


            FloatLayout:
                size_hint: 0.8, 0.85
                BoxLayout:
                    id: sudoku
                    orientation: "vertical"

        GridLayout:
            cols: 1
            size_hint: 0.2, 1.0

            Label:
                id: counter
                hour: 0
                minute: 0
                second: 0
                markup: True
                background_color: (0.3,0.3,0.3,1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: 100, 100, 100, 100


            Label:
                text: "Hint: left 3/3"

            GridLayout:
                cols: 2

                RoundedButton:
                    text: "Get"



                RoundedButton:
                    text: "Count"

            Button:
                text: "Correct"

            GridLayout:
                cols:3
                Button:
                    text: "Restart"
                Button:
                    text: "Pause"

                Button:
                    text: "Exit"


